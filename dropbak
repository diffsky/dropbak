#!/bin/bash
usage()
{
cat << EOF

rsync files to a (dropbox) location, filtering on .gitignore files

USAGE:

dropbak <source> <destination> [interval]

EOF
exit 1
}

if [ -z "$2" ];then
  usage
fi

INTERVAL=$3
if [ -z "$INTERVAL" ];then
  INTERVAL=300
fi

while true; do
  T="$(date +%s)"
  rsync -ra --delete --stats --human-readable --filter=':- .gitignore' --filter=".- $HOME/.gitignore" "$1" "$2"
  T="$(($(date +%s)-T))"
  let D=INTERVAL-T
  if [ $D -gt 0 ]; then
    sleep $D
  fi
done
